---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;

if (!entry || entry.data.draft) {
  return Astro.redirect('/blog');
}

const { Content } = await entry.render();
const { title, description, pubDate, updatedDate, coverImage, coverAlt, tags } = entry.data;

const siteUrl = Astro.site || 'https://dynast-ia.org';
const canonicalURL = new URL(`/blog/${entry.slug}`, siteUrl).toString();

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: title,
  description: description,
  datePublished: pubDate.toISOString(),
  dateModified: (updatedDate || pubDate).toISOString(),
  author: {
    '@type': 'Organization',
    name: 'Dynastia',
    url: siteUrl
  },
  publisher: {
    '@type': 'Organization',
    name: 'Dynastia',
    url: siteUrl,
    logo: {
      '@type': 'ImageObject',
      url: new URL('/Dynastia-side.svg', siteUrl).toString()
    }
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': canonicalURL
  },
  ...(coverImage && {
    image: {
      '@type': 'ImageObject',
      url: new URL(coverImage, siteUrl).toString()
    }
  })
};
---

<BaseLayout title={`${title} | Dynastia Blog`} description={description} ogImage={coverImage}>
  <Navigation />
  
  <main class="min-h-screen bg-white pt-24">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <!-- Back link -->
      <a href="/blog" class="inline-flex items-center text-[#4AC6C2] hover:text-[#3BA5A1] transition-colors mb-12 font-medium group">
        <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Retour au blog
      </a>
      
      <!-- Header -->
      <header class="mb-12">
        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag: string) => (
              <span class="text-sm font-semibold text-[#4AC6C2] bg-[#4AC6C2]/10 px-4 py-1.5 rounded-full">
                {tag}
              </span>
            ))}
          </div>
        )}
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black mb-6 font-['Inter'] text-gray-900 leading-tight">
          {title}
        </h1>
        
        <div class="flex items-center gap-4 text-base text-gray-600">
          <time datetime={pubDate.toISOString()}>
            {pubDate.toLocaleDateString('fr-CA', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          {updatedDate && (
            <>
              <span class="text-gray-400">•</span>
              <span>
                Mis à jour le {updatedDate.toLocaleDateString('fr-CA', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </span>
            </>
          )}
        </div>
      </header>
      
      <!-- Cover Image -->
      {coverImage && (
        <div class="mb-12 -mx-4 sm:mx-0">
          <img 
            src={coverImage} 
            alt={coverAlt || title}
            class="w-full h-auto rounded-none sm:rounded-2xl shadow-xl"
          />
        </div>
      )}
      
      <!-- Content -->
      <div class="blog-content max-w-none">
        <Content />
      </div>
      
      <!-- Share section -->
      <footer class="mt-16 pt-8 border-t-2 border-gray-100">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <h3 class="text-xl font-bold text-gray-900">Partager cet article</h3>
          <div class="flex gap-3">
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(canonicalURL.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-[#0077B5] text-white rounded-lg hover:bg-[#006399] transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
          </div>
        </div>
      </footer>
    </article>
  </main>
  
  <Footer />
  
  <!-- JSON-LD for SEO -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
</BaseLayout>

<style is:global>
  /* Clean, readable typography for blog posts */
  .blog-content {
    font-family: Georgia, 'Times New Roman', serif;
    color: #1a1a1a;
  }
  
  /* Paragraphs - Large, readable text with excellent spacing */
  .blog-content p {
    font-size: 1.375rem;
    line-height: 1.85;
    margin-bottom: 2rem;
    color: #2c2c2c;
    font-weight: 400;
    letter-spacing: -0.003em;
  }
  
  /* First paragraph - slightly larger */
  .blog-content > p:first-of-type {
    font-size: 1.5rem;
    line-height: 1.8;
    color: #1a1a1a;
  }
  
  /* Headings */
  .blog-content h2 {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 2.25rem;
    font-weight: 700;
    margin-top: 3.5rem;
    margin-bottom: 1.75rem;
    color: #0a0a0a;
    letter-spacing: -0.02em;
  }
  
  .blog-content h3 {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 2.75rem;
    margin-bottom: 1.25rem;
    color: #0a0a0a;
    letter-spacing: -0.01em;
  }
  
  /* Lists */
  .blog-content ul, .blog-content ol {
    margin: 2rem 0;
    padding-left: 2.5rem;
  }
  
  .blog-content li {
    font-size: 1.375rem;
    line-height: 1.8;
    margin-bottom: 1rem;
    color: #2c2c2c;
  }
  
  /* Links */
  .blog-content a {
    color: #4AC6C2;
    font-weight: 500;
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s;
  }
  
  .blog-content a:hover {
    border-bottom-color: #4AC6C2;
  }
  
  /* Blockquotes */
  .blog-content blockquote {
    margin: 2.5rem 0;
    padding: 1.75rem 2rem;
    border-left: 4px solid #FAC140;
    background: #fafafa;
    border-radius: 0 0.75rem 0.75rem 0;
    font-style: italic;
    font-size: 1.25rem;
    line-height: 1.75;
    color: #4a4a4a;
  }
  
  /* Code blocks */
  .blog-content pre {
    margin: 2.5rem 0;
    padding: 2rem;
    background: #1a1a1a;
    border-radius: 1rem;
    overflow-x: auto;
    font-size: 0.95rem;
    line-height: 1.7;
  }
  
  .blog-content pre code {
    font-family: 'Monaco', 'Courier New', monospace;
    color: #e8e8e8;
  }
  
  /* Inline code */
  .blog-content code:not(pre code) {
    font-family: 'Monaco', 'Courier New', monospace;
    background: #f3f3f3;
    padding: 0.2rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.9em;
    color: #4AC6C2;
    font-weight: 500;
  }
  
  /* Images */
  .blog-content img {
    margin: 3rem 0;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    width: 100%;
    height: auto;
  }
  
  /* Strong text */
  .blog-content strong {
    font-weight: 600;
    color: #0a0a0a;
  }
  
  /* HR separator */
  .blog-content hr {
    margin: 3rem 0;
    border: none;
    border-top: 1px solid #e0e0e0;
  }
  
  /* Tables */
  .blog-content table {
    margin: 2.5rem 0;
    width: 100%;
    border-collapse: collapse;
  }
  
  .blog-content th {
    background: #f8f8f8;
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    border-bottom: 2px solid #e0e0e0;
  }
  
  .blog-content td {
    padding: 1rem;
    border-bottom: 1px solid #e0e0e0;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .blog-content p {
      font-size: 1.125rem;
      line-height: 1.8;
    }
    
    .blog-content > p:first-of-type {
      font-size: 1.25rem;
    }
    
    .blog-content h2 {
      font-size: 1.75rem;
      margin-top: 2.5rem;
    }
    
    .blog-content h3 {
      font-size: 1.375rem;
      margin-top: 2rem;
    }
    
    .blog-content li {
      font-size: 1.125rem;
    }
    
    .blog-content blockquote {
      font-size: 1.125rem;
      padding: 1.5rem 1.75rem;
    }
  }
</style>