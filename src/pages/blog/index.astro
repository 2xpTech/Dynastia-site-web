---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import BlogCard from '../../components/BlogCard.astro';
import '../../styles/global.css';

// Get all blog posts, filter out drafts, sort by date
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Pagination
const currentPage = parseInt(Astro.url.searchParams.get('p') || '1');
const postsPerPage = 10;
const totalPages = Math.ceil(sortedPosts.length / postsPerPage);

// Validate page number
if (currentPage < 1 || currentPage > totalPages) {
  return Astro.redirect('/blog');
}

const startIndex = (currentPage - 1) * postsPerPage;
const endIndex = startIndex + postsPerPage;
const paginatedPosts = sortedPosts.slice(startIndex, endIndex);

// SEO
const pageTitle = currentPage > 1 ? `Blog - Page ${currentPage} | Dynastia` : 'Blog | Dynastia';
const pageDescription = "Découvrez nos derniers articles sur l'entrepreneuriat, l'innovation et les stratégies de croissance pour startups.";
const logoPath = '/Dynastia-side.svg';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Navigation />
  
  <main class="min-h-screen bg-white pt-24">
    <!-- Hero Section -->
    <div class="bg-gradient-to-b from-gray-50 to-white pb-12">
      <div class="max-w-[1680px] mx-auto px-4 sm:px-6 lg:px-8 xl:px-12 py-12">
        <div class="text-center">
          <span class="inline-block px-4 py-1.5 bg-[#FAC140]/10 text-[#FAC140] font-bold text-sm rounded-full mb-4">Blog</span>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black mb-6 text-gray-900 font-['Inter']">
            Nos articles et <span class="text-[#4AC6C2]">insights</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Conseils pratiques et stratégies éprouvées pour accélérer votre croissance entrepreneuriale
          </p>
        </div>
      </div>
    </div>
    
    <div class="max-w-[1680px] mx-auto px-4 sm:px-6 lg:px-8 xl:px-12 pb-16">
      
      <!-- Blog Grid -->
      {paginatedPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12 max-w-7xl mx-auto">
          {paginatedPosts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.slug}
              coverImage={post.data.coverImage}
              coverAlt={post.data.coverAlt}
              tags={post.data.tags}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-20">
          <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Aucun article pour le moment</h2>
          <p class="text-gray-600">Revenez bientôt pour découvrir nos premiers articles!</p>
        </div>
      )}
      
      <!-- Pagination -->
      {totalPages > 1 && (
        <nav class="flex items-center justify-center gap-2 mt-12" aria-label="Pagination">
          {/* Previous Button */}
          {currentPage > 1 ? (
            <a
              href={`/blog?p=${currentPage - 1}`}
              class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
              aria-label="Page précédente"
            >
              ← Précédent
            </a>
          ) : (
            <span class="px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-200 rounded-lg cursor-not-allowed">
              ← Précédent
            </span>
          )}
          
          {/* Page Numbers */}
          <div class="flex items-center gap-1">
            {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
              page === 1 || page === totalPages || Math.abs(page - currentPage) <= 1 ? (
                <a
                  href={`/blog?p=${page}`}
                  class={`px-3 py-2 text-sm font-medium rounded-lg transition-colors ${
                    page === currentPage
                      ? 'bg-[#4AC6C2] text-white'
                      : 'text-gray-700 bg-white border border-gray-300 hover:bg-gray-50'
                  }`}
                  aria-label={`Page ${page}`}
                  aria-current={page === currentPage ? 'page' : undefined}
                >
                  {page}
                </a>
              ) : (page === 2 && currentPage > 3) || (page === totalPages - 1 && currentPage < totalPages - 2) ? (
                <span class="px-2 text-gray-500">...</span>
              ) : null
            ))}
          </div>
          
          {/* Next Button */}
          {currentPage < totalPages ? (
            <a
              href={`/blog?p=${currentPage + 1}`}
              class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
              aria-label="Page suivante"
            >
              Suivant →
            </a>
          ) : (
            <span class="px-4 py-2 text-sm font-medium text-gray-400 bg-gray-100 border border-gray-200 rounded-lg cursor-not-allowed">
              Suivant →
            </span>
          )}
        </nav>
      )}
    </div>
  </main>
  
  <!-- Footer -->
  <footer class="bg-gray-50 border-t border-gray-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-[1680px] mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-6 md:mb-0">
          <img src={logoPath} alt="Dynastia Logo" class="h-10 w-auto" />
        </div>
        
        <div class="flex space-x-6">
          <a href="#" class="text-gray-400 hover:text-[#4AC6C2] transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-[#4AC6C2] transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-[#4AC6C2] transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <div class="mt-8 pt-8 border-t border-gray-200 text-center">
        <p class="text-sm text-gray-500">
          © 2025 Dynastia. Tous droits réservés.
        </p>
      </div>
    </div>
  </footer>
</BaseLayout>