---
import SEO from '../components/SEO.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = "L'Accélérateur pour Propulser votre croissance",
  description = "L'incubateur IA leader au Québec aidant les entreprises à obtenir des subventions, naviguer les défis financiers et accélérer leur croissance grâce à des solutions de financement intelligentes.",
  image,
  canonical
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <SEO 
      title={title}
      description={description}
      image={image}
      canonical={canonical}
    />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Merriweather:wght@300;400;700;900&display=swap" rel="stylesheet">
    
    <script is:inline defer data-domain="dynastia.ai" src="https://plausible.io/js/script.js"></script>
  </head>
  <body class="bg-white text-gray-900 font-['Merriweather'] antialiased">
    <slot />
  </body>
</html>