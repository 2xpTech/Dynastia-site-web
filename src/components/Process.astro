---
const steps = [
  {
    number: "1",
    title: "Discovery Call",
    description: "15-minute call to understand your business needs and funding goals",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
    </svg>`,
    time: "Day 1"
  },
  {
    number: "2",
    title: "AI Analysis",
    description: "Our AI scans 500+ programs to find your perfect matches",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
    </svg>`,
    time: "Day 2-3"
  },
  {
    number: "3",
    title: "Strategy Session",
    description: "Personalized funding roadmap and application strategy",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
    </svg>`,
    time: "Week 1"
  },
  {
    number: "4",
    title: "Application Support",
    description: "Hands-on help with applications and ongoing optimization",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
    </svg>`,
    time: "Ongoing"
  }
];
---

<section id="process" class="py-24 px-4 sm:px-6 lg:px-8 bg-gray-50">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <span class="text-[#FAC140] font-bold text-base uppercase tracking-wide">How It Works</span>
      <h2 class="text-4xl sm:text-5xl font-black mt-2 mb-4 text-gray-900">
        From Zero to Funded in 4 Simple Steps
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Our streamlined process gets you results fast
      </p>
    </div>
    
    <div class="relative">
      <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-[#FAC140] to-[#2DC3E9]"></div>
      
      <div class="space-y-12 md:space-y-16">
        {steps.map((step, index) => (
          <div class={`relative flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
            <div class={`flex-1 ${index % 2 === 0 ? 'md:pr-12' : 'md:pl-12'}`}>
              <div class={`bg-white rounded-lg p-8 shadow-lg hover:shadow-xl transition-shadow ${index % 2 === 0 ? 'md:text-right' : 'md:text-left'}`}>
                <div class={`flex items-center gap-4 mb-4 ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
                  <div class="w-12 h-12 rounded-md bg-[#FAC140]/20 flex items-center justify-center text-[#EAB130]">
                    <Fragment set:html={step.icon} />
                  </div>
                  <div>
                    <h3 class="text-2xl font-bold text-gray-900">{step.title}</h3>
                    <span class="text-sm text-[#FAC140] font-semibold">{step.time}</span>
                  </div>
                </div>
                <p class="text-gray-600">{step.description}</p>
              </div>
            </div>
            
            <div class="hidden md:flex absolute left-1/2 transform -translate-x-1/2 items-center justify-center">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FAC140] to-[#2DC3E9] flex items-center justify-center text-white font-bold shadow-lg">
                {step.number}
              </div>
            </div>
            
            <div class={`flex-1 ${index % 2 === 0 ? 'md:pl-12' : 'md:pr-12'}`}></div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="mt-16 text-center">
      <a 
        href="#contact" 
        class="gradient-bg text-white font-semibold px-10 py-4 rounded-md hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 inline-block"
      >
        Start Your Journey Today â†’
      </a>
      <p class="text-sm text-gray-500 mt-4">Free consultation</p>
    </div>
  </div>
</section>