<section id="process" class="py-8 sm:py-10 px-4 sm:px-6 lg:px-8 bg-gray-50 relative">
  <div class="max-w-[1680px] mx-auto px-4 sm:px-6 lg:px-8 xl:px-12">
    <div class="text-center mb-10 sm:mb-12">
      <span class="text-[#FAC140] font-bold text-base tracking-wide">Comment ça fonctionne</span>
      <h2 class="text-3xl sm:text-4xl font-black mt-2 mb-4 text-gray-900">
        Nos 5 piliers pour accélérer votre croissance
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Un accompagnement unique qui allie communauté, expertise et opportunités.
      </p>
    </div>
    
    {/* Stacked Accordion Pillars */}
    <div class="max-w-6xl mx-auto space-y-0 relative" id="pillars-container">
      {pillars.map((pillar, index) => (
        <div 
          class="pillar-item group relative border-b border-gray-200 last:border-b-0 overflow-hidden transition-all duration-700"
          data-index={index}
          style="transition: all 0.7s cubic-bezier(0.4, 0, 0.2, 1);"
        >
          <div class="cursor-pointer">
            {/* Main row - always visible */}
            <div class="flex items-center justify-between py-6 px-4 sm:px-8 lg:px-12">
              <div class="flex items-center gap-4 sm:gap-6 lg:gap-8">
                {/* Number */}
                <span class={`pillar-number text-2xl sm:text-4xl lg:text-5xl font-['Inter'] font-light ${pillar.color === 'bg-[#FAC140]' ? 'text-[#FAC140]' : 'text-[#2DC3E9]'} opacity-20 transition-opacity duration-500`}>
                  {pillar.number}
                </span>
                
                {/* Title */}
                <h3 class="text-lg sm:text-2xl lg:text-3xl font-bold text-gray-900 transition-colors duration-300">
                  {pillar.title}
                </h3>
              </div>
              
              {/* Icon on the right */}
              <div class={`pillar-icon ${pillar.color} ${pillar.color === 'bg-[#FAC140]' ? 'text-white' : 'text-white'} p-2 sm:p-3 rounded-lg opacity-0 transition-all duration-500 transform translate-x-4`}>
                <Fragment set:html={pillar.icon} />
              </div>
            </div>
            
            {/* Expandable description */}
            <div class="pillar-content max-h-0 transition-all duration-700 ease-in-out overflow-hidden">
              <div class="px-4 sm:px-8 lg:px-12 pb-6 pl-16 sm:pl-24 lg:pl-32">
                <p class="text-sm sm:text-base lg:text-lg text-gray-600 leading-relaxed">
                  {pillar.description}
                </p>
              </div>
            </div>
            
            {/* Accent line */}
            <div class={`pillar-accent absolute left-0 top-0 bottom-0 w-1 ${pillar.color} transform scale-y-0 transition-transform duration-500 origin-top`}></div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-10 sm:mt-12 text-center">
      <a 
        href="#contact" 
        class="gradient-bg text-white font-semibold px-6 sm:px-10 py-3 sm:py-4 text-sm sm:text-base rounded-md border border-gray-400 hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 inline-block"
      >
        Commencez Votre Parcours Aujourd'hui →
      </a>
      <p class="text-xs sm:text-sm text-gray-500 mt-4">Consultation gratuite</p>
    </div>
  </div>
</section>

<script>
  // Auto-expand pillars on scroll for touch devices
  document.addEventListener('DOMContentLoaded', () => {
    const pillarsContainer = document.getElementById('pillars-container');
    if (!pillarsContainer) return;
    
    const pillarItems = pillarsContainer.querySelectorAll('.pillar-item');
    let currentActiveIndex = -1;
    
    // Function to activate a pillar
    function activatePillar(index: number) {
      pillarItems.forEach((item, i) => {
        const pillarNumber = item.querySelector('.pillar-number') as HTMLElement;
        const pillarIcon = item.querySelector('.pillar-icon') as HTMLElement;
        const pillarContent = item.querySelector('.pillar-content') as HTMLElement;
        const pillarAccent = item.querySelector('.pillar-accent') as HTMLElement;
        const pillarElement = item as HTMLElement;
        
        if (i === index) {
          // Activate this pillar
          pillarElement.classList.add('bg-white');
          if (pillarNumber) pillarNumber.style.opacity = '1';
          if (pillarIcon) {
            pillarIcon.style.opacity = '1';
            pillarIcon.style.transform = 'translateX(0)';
          }
          if (pillarContent) pillarContent.style.maxHeight = '8rem';
          if (pillarAccent) pillarAccent.style.transform = 'scaleY(1)';
        } else {
          // Deactivate this pillar
          pillarElement.classList.remove('bg-white');
          if (pillarNumber) pillarNumber.style.opacity = '0.2';
          if (pillarIcon) {
            pillarIcon.style.opacity = '0';
            pillarIcon.style.transform = 'translateX(1rem)';
          }
          if (pillarContent) pillarContent.style.maxHeight = '0';
          if (pillarAccent) pillarAccent.style.transform = 'scaleY(0)';
        }
      });
      currentActiveIndex = index;
    }
    
    // Function to handle scroll-based activation
    function handleScrollActivation() {
      if (!pillarsContainer) return;
      const containerRect = pillarsContainer.getBoundingClientRect();
      const viewportCenter = window.innerHeight / 2;
      
      // Check if the pillars section is in view
      if (containerRect.top < viewportCenter && containerRect.bottom > viewportCenter) {
        // Calculate which pillar should be active based on scroll position
        const scrollProgress = (viewportCenter - containerRect.top) / containerRect.height;
        const activeIndex = Math.floor(scrollProgress * pillarItems.length);
        
        if (activeIndex >= 0 && activeIndex < pillarItems.length && activeIndex !== currentActiveIndex) {
          activatePillar(activeIndex);
        }
      } else if (containerRect.top > viewportCenter && currentActiveIndex !== -1) {
        // Reset all pillars when section is above viewport
        currentActiveIndex = -1;
        pillarItems.forEach(item => {
          const pillarNumber = item.querySelector('.pillar-number') as HTMLElement;
          const pillarIcon = item.querySelector('.pillar-icon') as HTMLElement;
          const pillarContent = item.querySelector('.pillar-content') as HTMLElement;
          const pillarAccent = item.querySelector('.pillar-accent') as HTMLElement;
          
          if (pillarNumber) pillarNumber.style.opacity = '0.2';
          if (pillarIcon) {
            pillarIcon.style.opacity = '0';
            pillarIcon.style.transform = 'translateX(1rem)';
          }
          if (pillarContent) pillarContent.style.maxHeight = '0';
          if (pillarAccent) pillarAccent.style.transform = 'scaleY(0)';
        });
      }
    }
    
    // Only enable scroll animations on mobile/touch devices
    function setupScrollAnimation() {
      // Better touch detection that excludes devices with both touch and mouse (like Windows touchscreen laptops)
      const isMobileTouch = ('ontouchstart' in window || navigator.maxTouchPoints > 0) && window.innerWidth < 1024;
      const isSmallScreen = window.innerWidth < 768; // Use smaller breakpoint for mobile only
      
      if (isMobileTouch || isSmallScreen) {
        // Mobile/tablet: Use scroll-based activation
        window.addEventListener('scroll', handleScrollActivation);
        window.addEventListener('resize', handleScrollActivation);
        handleScrollActivation(); // Initial check
        
        // Remove hover class for mobile
        if (pillarsContainer) {
          pillarsContainer.classList.remove('hover-enabled');
        }
      } else {
        // Desktop (including Windows): Use hover-only behavior
        window.removeEventListener('scroll', handleScrollActivation);
        if (pillarsContainer) {
          pillarsContainer.classList.add('hover-enabled');
          // Reset any active states from scroll
          pillarItems.forEach(item => {
            const pillarElement = item as HTMLElement;
            pillarElement.classList.remove('bg-white');
            const pillarNumber = item.querySelector('.pillar-number') as HTMLElement;
            const pillarIcon = item.querySelector('.pillar-icon') as HTMLElement;
            const pillarContent = item.querySelector('.pillar-content') as HTMLElement;
            const pillarAccent = item.querySelector('.pillar-accent') as HTMLElement;
            
            if (pillarNumber) pillarNumber.style.opacity = '0.2';
            if (pillarIcon) {
              pillarIcon.style.opacity = '0';
              pillarIcon.style.transform = 'translateX(1rem)';
            }
            if (pillarContent) pillarContent.style.maxHeight = '0';
            if (pillarAccent) pillarAccent.style.transform = 'scaleY(0)';
          });
        }
      }
    }
    
    // Setup and handle resize
    setupScrollAnimation();
    window.addEventListener('resize', setupScrollAnimation);
  });
</script>

<style>
  /* Restore hover styles for desktop */
  #pillars-container.hover-enabled .pillar-item:hover {
    background-color: white;
  }
  #pillars-container.hover-enabled .pillar-item:hover .pillar-number {
    opacity: 1 !important;
  }
  #pillars-container.hover-enabled .pillar-item:hover .pillar-icon {
    opacity: 1 !important;
    transform: translateX(0) !important;
  }
  #pillars-container.hover-enabled .pillar-item:hover .pillar-content {
    max-height: 8rem !important;
  }
  #pillars-container.hover-enabled .pillar-item:hover .pillar-accent {
    transform: scaleY(1) !important;
  }
</style>