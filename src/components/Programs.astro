---
const base = import.meta.env.BASE_URL || '';

const coaches = [
  {
    name: "Alexandre Émond",
    title: "Entrepreneur, expert en financement technologique et crédits d'impôt",
    description: "Entrepreneur, expert en financement technologique et crédits d'impôt",
    initials: "AE",
    image: base ? `${base}/images/coaches/alexandre-emond.jpeg` : "/images/coaches/alexandre-emond.jpeg"
  },
  {
    name: "Steve Moisan",
    title: "Coach, entrepreneur, spécialiste senior en gestion de subventions et crédits RS&DE",
    description: "Coach, entrepreneur, spécialiste senior en gestion de subventions et crédits RS&DE",
    initials: "SM",
    image: base ? `${base}/images/coaches/Steve-moisan.jpeg` : "/images/coaches/Steve-moisan.jpeg"
  },
  {
    name: "Mathieu Vernet",
    title: "Coach en stratégie, innovation et excellence opérationnelle",
    description: "Coach en stratégie, innovation et excellence opérationnelle",
    initials: "MV",
    image: base ? `${base}/images/coaches/Mathieu-vernet.jpeg` : "/images/coaches/Mathieu-vernet.jpeg"
  },
  {
    name: "Alain Castonguay",
    title: "Coach stratégique en organisation et leadership",
    description: "Coach stratégique en organisation et leadership",
    initials: "AC",
    image: base ? `${base}/images/coaches/Alain-castonguay.jpeg` : "/images/coaches/Alain-castonguay.jpeg"
  },
  {
    name: "Alain Chagnon",
    title: "Consultant TI et expert en systèmes de gestion d'entreprise",
    description: "Consultant TI et expert en systèmes de gestion d'entreprise",
    initials: "AC",
    image: base ? `${base}/images/coaches/Alain-chagnon.jpeg` : "/images/coaches/Alain-chagnon.jpeg"
  }
];

// Group coaches into sets of 4 (or adjust as needed)
const coachesPerPage = 4;
const totalPages = Math.ceil(coaches.length / coachesPerPage);
---

<section id="programs" class="py-12 sm:py-16 px-4 sm:px-6 lg:px-8 bg-gray-50">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-10 sm:mb-12">
      <span class="text-[#FAC140] font-bold text-base uppercase tracking-wide">Nos Coachs</span>
      <h2 class="text-3xl sm:text-4xl font-black mt-2 mb-4 text-gray-900">
        Une équipe entière dédiée à votre succès
      </h2>
      <p class="text-xl text-gray-600 max-w-4xl mx-auto">
        Nos coachs mettent plus de 20 ans d'expérience au service des PME<br />
        pour vous offrir des solutions concrètes et accélérer votre croissance.
      </p>
    </div>
    
    {/* Desktop: All 5 coaches in one row. Mobile: Scrollable */}
    <div class="hidden lg:block">
      <div class="grid grid-cols-5 gap-4">
        {coaches.map((coach) => (
          <div class="flex flex-col">
            {/* Full card image - consistent size */}
            <div class="rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 h-64 group">
              <img 
                src={coach.image} 
                alt={coach.name}
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-500"
              />
            </div>
            
            {/* Coach info - left aligned */}
            <div class="mt-3 text-left">
              <h3 class="text-base font-bold text-gray-900">{coach.name}</h3>
              <p class="text-xs text-gray-600 leading-tight">{coach.title}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    {/* Mobile/Tablet: Scrollable container */}
    <div class="lg:hidden relative">
      <div id="coaches-container" class="overflow-x-auto scrollbar-hide pb-4">
        <div class="flex gap-6 w-max">
          {coaches.map((coach) => (
            <div class="flex-shrink-0 w-72">
              {/* Full card image */}
              <div class="rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 h-80 group">
                <img 
                  src={coach.image} 
                  alt={coach.name}
                  class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-500"
                />
              </div>
              
              {/* Coach info - left aligned for mobile too */}
              <div class="mt-3 text-left">
                <h3 class="text-lg font-bold text-gray-900">{coach.name}</h3>
                <p class="text-sm text-gray-600">{coach.title}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      {/* Pagination lines for mobile */}
      <div class="flex justify-center gap-3 mt-6">
        {[...Array(totalPages)].map((_, index) => (
          <button 
            class={`page-indicator h-1 rounded-full transition-all duration-300 cursor-pointer ${
              index === 0 ? 'bg-[#FAC140] w-16' : 'bg-gray-300 w-8 hover:bg-gray-400'
            }`}
            aria-label={`Go to page ${index + 1}`}
            data-page={index}
          />
        ))}
      </div>
    </div>
    
    
    <div class="mt-10 sm:mt-12 text-center">
      <a 
        href="#contact" 
        class="gradient-bg text-white font-semibold px-8 py-4 rounded-md hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200 inline-block"
      >
        Rejoindre la cohorte →
      </a>
    </div>
  </div>
</section>

<script>
  const coachesPerPage = 4;
  
  function scrollToPage(page: number) {
    const container = document.getElementById('coaches-container');
    if (container) {
      const cardWidth = 288; // w-72 = 18rem = 288px
      const gap = 24; // gap-6 = 1.5rem = 24px
      const scrollPosition = page * coachesPerPage * (cardWidth + gap);
      container.scrollTo({
        left: scrollPosition,
        behavior: 'smooth'
      });
      
      // Update active indicator
      document.querySelectorAll('.page-indicator').forEach((indicator: Element) => {
        const indicatorPage = parseInt((indicator as HTMLElement).dataset.page || '0');
        if (indicatorPage === page) {
          indicator.classList.add('bg-[#FAC140]', 'w-16');
          indicator.classList.remove('bg-gray-300', 'w-8');
        } else {
          indicator.classList.remove('bg-[#FAC140]', 'w-16');
          indicator.classList.add('bg-gray-300', 'w-8');
        }
      });
    }
  }
  
  // Add click handlers after DOM loads
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.page-indicator').forEach((indicator: Element) => {
      const page = parseInt((indicator as HTMLElement).dataset.page || '0');
      indicator.addEventListener('click', () => scrollToPage(page));
    });
  });
</script>