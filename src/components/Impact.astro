<section id="impact" class="py-24 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <span class="text-purple-600 font-semibold text-sm uppercase tracking-wider">Impact & Results</span>
      <h2 class="text-4xl sm:text-5xl font-black mt-2 mb-4">
        Trusted by <span class="gradient-text">200+ Businesses</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Real results from real Quebec businesses
      </p>
    </div>
    
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-20">
      {stats.map((stat) => (
        <div class="bg-gradient-to-br from-purple-50 to-emerald-50 rounded-2xl p-6 text-center">
          <div class="text-4xl mb-3">{stat.icon}</div>
          <div class="text-3xl font-black text-gray-900 mb-1">{stat.value}</div>
          <div class="text-sm text-gray-600">{stat.label}</div>
        </div>
      ))}
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-gray-50 rounded-2xl p-8 relative">
          <svg class="absolute top-6 left-6 w-8 h-8 text-purple-200" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          
          <div class="relative z-10">
            <p class="text-gray-700 mb-6 italic leading-relaxed">
              "{testimonial.quote}"
            </p>
            
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-emerald-500 flex items-center justify-center text-white font-semibold">
                {testimonial.avatar}
              </div>
              <div>
                <div class="font-semibold text-gray-900">{testimonial.author}</div>
                <div class="text-sm text-gray-600">{testimonial.role}</div>
              </div>
            </div>
          </div>
          
          <div class="flex gap-1 mt-4">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
