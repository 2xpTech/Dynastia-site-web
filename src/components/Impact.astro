---
const testimonials = [
  {
    quote: "Dynastia nous a aidés à sécuriser 2,5M$ de financement en seulement 6 mois. Leur approche alimentée par l'IA nous a fait économiser d'innombrables heures.",
    author: "Marie-Claire Dubois",
    role: "PDG, TechManufacture Inc.",
    avatar: "MD"
  },
  {
    quote: "Le support de navigation des subventions a été révolutionnaire. Nous sommes passés de 20% à 85% de taux de succès des demandes.",
    author: "Jean-Paul Tremblay",
    role: "Fondateur, GreenTech Solutions",
    avatar: "JT"
  },
  {
    quote: "Leur expertise dans le paysage de financement du Québec est inégalée. Je recommande fortement pour toute entreprise en croissance.",
    author: "Sarah Chen",
    role: "COO, BioInnovate Labs",
    avatar: "SC"
  }
];

const stats = [
  { 
    value: "150+", 
    label: "Clients accompagnés avec succès", 
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>` 
  },
  { 
    value: "50M$+", 
    label: "Financement obtenu", 
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>` 
  },
  { 
    value: "Jusqu'à 5X", 
    label: "Croissance des entreprises accélérées", 
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
    </svg>` 
  }
];
---

<section id="impact" class="py-24 px-4 sm:px-6 lg:px-8 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <span class="text-[#FAC140] font-bold text-base uppercase tracking-wide">Impact & Résultats</span>
      <h2 class="text-3xl sm:text-4xl font-black mt-2 mb-4 text-gray-900">
        Fait Confiance par 150+ Entreprises
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Résultats réels d'entreprises québécoises réelles
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-20">
      {stats.map((stat) => (
        <div class="bg-gradient-to-br from-yellow-50 to-cyan-50 rounded-lg p-6 text-center">
          <div class="flex justify-center mb-3 text-[#FAC140]">
            <Fragment set:html={stat.icon} />
          </div>
          <div class="text-3xl font-black text-gray-900 mb-1">{stat.value}</div>
          <div class="text-sm text-gray-600">{stat.label}</div>
        </div>
      ))}
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-gray-50 rounded-lg p-8 relative">
          <svg class="absolute top-6 left-6 w-8 h-8 text-[#FAC140]/30" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          
          <div class="relative z-10">
            <p class="text-gray-700 mb-6 italic leading-relaxed">
              "{testimonial.quote}"
            </p>
            
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FAC140] to-[#2DC3E9] flex items-center justify-center text-white font-semibold">
                {testimonial.avatar}
              </div>
              <div>
                <div class="font-semibold text-gray-900">{testimonial.author}</div>
                <div class="text-sm text-gray-600">{testimonial.role}</div>
              </div>
            </div>
          </div>
          
          <div class="flex gap-1 mt-4">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>