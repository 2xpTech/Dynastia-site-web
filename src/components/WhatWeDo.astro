---

<section id="what-we-do" class="py-24 px-4 sm:px-6 lg:px-8 bg-gray-50">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <span class="text-[#FAC140] font-bold text-base uppercase tracking-wide">Ce Que Nous Faisons</span>
      <h2 class="text-3xl sm:text-4xl font-black mt-2 mb-4 text-gray-900">
        2X Plus Fort. 2X Plus Intelligent. 2X Plus Rapide.
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Support complet à chaque étape de votre parcours de financement
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
      {services.map((service, index) => (
        <div class="relative bg-white rounded-lg p-6 border border-gray-200 hover:border-[#FAC140]/50 shadow-md hover:shadow-xl transition-all duration-300 group">
          {/* Professional icon */}
          <div class={`w-12 h-12 mb-4 bg-gradient-to-br ${service.color === 'yellow' ? 'from-[#FAC140] to-[#EAB130]' : 'from-[#2DC3E9] to-[#1BA8CE]'} rounded-lg flex items-center justify-center text-white group-hover:scale-110 transition-transform duration-300`}>
            <Fragment set:html={service.icon} />
          </div>
          
          <h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-[#FAC140] transition-colors duration-300">{service.title}</h3>
          <p class="text-gray-600 text-sm leading-relaxed">{service.description}</p>
          
          {/* Subtle accent bar at bottom */}
          <div class={`absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r ${service.color === 'yellow' ? 'from-[#FAC140] to-[#EAB130]' : 'from-[#2DC3E9] to-[#1BA8CE]'} opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-b-lg`}></div>
        </div>
      ))}
    </div>
  </div>
</section>