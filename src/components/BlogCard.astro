---
export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  coverImage?: string;
  coverAlt?: string;
  tags?: string[];
}

const { title, description, pubDate, slug, coverImage, coverAlt, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('fr-CA', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-white rounded-xl border border-gray-100 shadow-sm hover:shadow-2xl hover:border-[#4AC6C2]/20 transition-all duration-300 overflow-hidden group h-full">
  <a href={`/blog/${slug}`} class="block h-full flex flex-col">
    {coverImage ? (
      <div class="h-56 overflow-hidden bg-gray-100">
        <img 
          src={coverImage} 
          alt={coverAlt || title}
          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
          loading="lazy"
        />
      </div>
    ) : (
      <div class="h-56 bg-gradient-to-br from-[#FAC140]/10 via-white to-[#4AC6C2]/10 flex items-center justify-center">
        <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
        </svg>
      </div>
    )}
    
    <div class="p-6 flex-1 flex flex-col">
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4">
          {tags.slice(0, 2).map(tag => (
            <span class="text-xs font-semibold text-[#4AC6C2] bg-[#4AC6C2]/10 px-3 py-1 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
      
      <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-[#4AC6C2] transition-colors font-['Inter'] leading-tight">
        {title}
      </h3>
      
      <p class="text-gray-600 text-base mb-6 line-clamp-3 flex-1 leading-relaxed">
        {description}
      </p>
      
      <div class="mt-auto pt-4 border-t border-gray-100 flex items-center justify-between">
        <time datetime={pubDate.toISOString()} class="text-sm text-gray-500 font-medium">
          {formattedDate}
        </time>
        <span class="text-[#4AC6C2] group-hover:translate-x-1 transition-transform">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>