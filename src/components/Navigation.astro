---
const base = import.meta.env.BASE_URL || '';
const logoPath = base.endsWith('/') ? `${base}assetlogo.svg` : `${base}/assetlogo.svg`;
const homeUrl = base || '/';
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href={homeUrl} class="flex items-center">
          <img 
            src={logoPath}
            alt="Dynastia Logo" 
            class="h-8 w-auto"
          />
        </a>
      </div>
      
      <div class="hidden md:flex items-center gap-8">
        <a href="#what-we-do" class="font-['Inter'] text-gray-600 hover:text-[#FAC140] transition-colors">Services</a>
        <a href="#programs" class="font-['Inter'] text-gray-600 hover:text-[#FAC140] transition-colors">Coachs</a>
        <a href="#impact" class="font-['Inter'] text-gray-600 hover:text-[#FAC140] transition-colors">Résultats</a>
        <a href="#process" class="font-['Inter'] text-gray-600 hover:text-[#FAC140] transition-colors">Processus</a>
        <a 
          href="#booking" 
          class="gradient-bg text-white font-semibold px-6 py-2 rounded-lg hover:shadow-lg transition-all"
        >
          Consultation
        </a>
      </div>
      
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg id="menu-open" class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="menu-close" class="w-6 h-6 text-gray-600 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
  
  {/* Mobile menu */}
  <div id="mobile-menu" class="md:hidden hidden">
    <div class="px-4 pt-2 pb-4 space-y-2 bg-white border-b border-gray-100">
      <a href="#what-we-do" class="block px-3 py-2 font-['Inter'] text-gray-600 hover:text-[#FAC140] hover:bg-gray-50 rounded-lg transition-colors">Services</a>
      <a href="#programs" class="block px-3 py-2 font-['Inter'] text-gray-600 hover:text-[#FAC140] hover:bg-gray-50 rounded-lg transition-colors">Coachs</a>
      <a href="#impact" class="block px-3 py-2 font-['Inter'] text-gray-600 hover:text-[#FAC140] hover:bg-gray-50 rounded-lg transition-colors">Résultats</a>
      <a href="#process" class="block px-3 py-2 font-['Inter'] text-gray-600 hover:text-[#FAC140] hover:bg-gray-50 rounded-lg transition-colors">Processus</a>
      <a href="#booking" class="block gradient-bg text-white font-semibold px-3 py-2 rounded-lg text-center">
        Consultation
      </a>
    </div>
  </div>
</nav>


<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuOpen = document.getElementById('menu-open');
    const menuClose = document.getElementById('menu-close');
    
    if (menuBtn && mobileMenu && menuOpen && menuClose) {
      menuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        menuOpen.classList.toggle('hidden');
        menuClose.classList.toggle('hidden');
      });
      
      // Close menu when clicking on a link
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          menuOpen.classList.remove('hidden');
          menuClose.classList.add('hidden');
        });
      });
    }
  });
</script>